for job in jobs
    - var name = job.name;
    - var camel = job.camel;
    div.card-panel
        div.row.valign-wrapper
            div.col.s8.valign
                h3.remove-margin-bottom !{name}
                p.truncate Add details about your time at !{name}
                p.smallest (*) = OPTIONAL
            div.col.s8.valign
                i.material-icons.right.medium work
    div.card-panel
        div.row(id!= 'job-' + camel)
           div.col.s12
               input.validate.truncate(placeholder='Vigilante' type='text' id!= camel + '-jobTitle', name!= 'jobTitle1', required)
               label(for!= camel + '-jobTitle') Job Title

            div.row
                div.offset-s1.col.s10
                    div.row.valign-wrapper
                        div.col.s8.valign.left-align
                            span.flow-text Add a job bullet
                        div.col.s4.valign.right-align
                            a.btn-floating.btn-large.waves-effect.waves-light(type = 'button' class!= camel + '-addBullet', onclick='addJobBullet()')
                                i.material-icons format_list_bulleted
                div.offset-s1.col.s10
                    ul.my-lists
                        li.my-list-item Spent youth traveling the world, training to intellectual and physical perfection and learning a variety of crime-fighting skills, including chemistry, criminology, forensics, martial arts, gymnastics, disguise, and escape artistry.
                    div(id!= camel + '-addBullets')
                        textarea.materialize-textarea.validate.truncate(placeholder='Spent youth traveling the world, training to intellectual and physical perfection and learning a variety of crime-fighting skills, including chemistry, criminology, forensics, martial arts, gymnastics, disguise, and escape artistry.' name!= camel + '-bullet1' id!= camel + '-bullet1' required)
                        label(for!= camel + '-bullet1') Job Bullet
